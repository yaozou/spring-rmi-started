    <commons-dbcp_version>1.4</commons-dbcp_version>
    <jxl_version>2.6</jxl_version>
    <hibernate_version>4.3.5.Final</hibernate_version>
    <hibernate-commons-annotations_version>4.0.4.Final</hibernate-commons-annotations_version>
    <hibernate-jpa21-api_version>1.0.0.Final</hibernate-jpa21-api_version>
    <log4j_version>2.8.2</log4j_version>
    <okhttp_version>3.8.1</okhttp_version>
    <fastjson_version>1.2.38</fastjson_version>
    <junit_version>4.12</junit_version>
    <lang3_version>3.1</lang3_version>
    <commons_collections4>4.1</commons_collections4>
    <codec_version>1.10</codec_version>
    <slf4j_version>1.7.21</slf4j_version>
    <commons_beanutils_version>1.8.3</commons_beanutils_version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.xpand.rmi</groupId>
            <artifactId>xpand-rmi-starter</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>${spring_version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
